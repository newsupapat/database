      h1 Information Data View As #{Authen}
     .row.d-flex.justify-content-center
        if data     
            div(class=(data.length<12) ? `col-${data.length}`:'col-12')
                .card
                    .card-header
                        h4 Employee Data
                    .card-body
                        .table-responsive
                            table.table.table-bordered.table-md
                                tbody              
                                    tr
                                        each item,header in data[0]
                                            if header == 'Name'
                                                th FirstName
                                                th LastName
                                            else 
                                                th #{header}
                                        th Edit        
                                each info in data
                                    tr 
                                        -var data2 = JSON.stringify(info) 
                                        each val,key in info
                                                if key != 'Name'
                                                    td #{val}
                                                else
                                                    each  item,index in val
                                                        td #{item}
                                        td 
                                            a.btn.btn-danger(href='/Edit?q='+data2+'&'+'Field='+info._id+"&coll=information") Edit
